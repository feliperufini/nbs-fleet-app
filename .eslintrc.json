{
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-no-bind": "off",
    "semicolons": "never",
    "max-len": [
      0,
      160,
      2,
      {
        "ignoreUrls": true
      }
    ]
  }
}